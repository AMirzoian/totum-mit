{
  "name": "totumonline/totum-mit",
  "description": "CRM, ERP and custom constructor",
  "type": "project",
  "require": {
    "ext-json": "*",
    "php": "^7.1",
    "phpmailer/phpmailer": "^6.1",
    "psr/http-message": "^1.0",
    "ext-pdo": "*",
    "psr/log": "^1.1",
    "guzzlehttp/psr7": "^1.6",
    "symfony/console": "^4.4",
    "ext-openssl": "*",
    "ext-simplexml": "*",
    "ext-soap": "*",
    "ext-zlib": "*",
    "ext-bcmath": "*",
    "ext-curl": "*"

    },
  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/totumonline/totum-front/"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "friendsofphp/php-cs-fixer": "^2.16",
    "totumonline/totum-front": "dev-dev"

  },
  "autoload": {
    "psr-4": {
      "totum\\": "totum/",
      "totum\\config\\": "./"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "totum\\tests\\": "./tests/"
    }
  },
  "bin": [
    "bin/schema_decode"
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "scripts": {
    "post-package-update": [
      "cp http/css/* ../../../http/css/"
    ],
    "dev-run": "php -S localhost:8080 -t http/"
  }
}
